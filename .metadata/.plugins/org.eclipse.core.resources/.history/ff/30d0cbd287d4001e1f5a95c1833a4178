@RestController
@RequestMapping("/attendence")
public class AttendenceController {

	@Autowired
	public UserService userservice;
	
	@Autowired
	public ModelMapper mapper;
	
	Converterdto con;
	
	@PostMapping("/signin/{id}")
	public String signup(@PathVariable("id") int id) throws ParseException
	{
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");//create new date for comparision with all date in orders 
		Date dateWithoutTime = sdf.parse(sdf.format(new Date()));
		System.out.println(dateWithoutTime);	
		return  "user signin data successfully";		
	}
	
	@PostMapping("/signout/{id}")
	public String signout(@PathVariable("id") int id) {
		    
			return "user signout data successfully";			
	} 
	
	
}
